<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SafwanActivity">


    <RadioGroup
        android:id="@+id/Safwan_RadioGroup"
        android:layout_width="140dp"
        android:layout_height="308dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.011"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="128dp"
            android:layout_height="65dp"/>

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="128dp"
            android:layout_height="65dp"/>

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="128dp"
            android:layout_height="65dp"/>

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="128dp"
            android:layout_height="65dp"/>


    </RadioGroup>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="581dp"
        android:layout_height="65dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/Safwan_RadioGroup"
        app:srcCompat="@drawable/pizzahut_image" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="144dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/Safwan_RadioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/nova_image" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="144dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView6"
        app:layout_constraintStart_toEndOf="@+id/Safwan_RadioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/dominos_image" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="87dp"
        android:layout_height="72dp"
        android:layout_marginStart="404dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pizzapizza_image" />

    <Button
        android:id="@+id/next_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="636dp"
        android:layout_marginTop="32dp"
        android:text="@string/next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

</androidx.constraintlayout.widget.ConstraintLayout>